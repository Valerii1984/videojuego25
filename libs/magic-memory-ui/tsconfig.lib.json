{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",

    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "noEmit": false,
    "composite": false
  },
  "include": [
    "src/index.ts",
    "src/lib/**/*.ts",
    "src/lib/**/*.tsx",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "src/**/*.spec.*",
    "src/**/*.test.*",
    "src/test-setup.ts"
  ]
}
